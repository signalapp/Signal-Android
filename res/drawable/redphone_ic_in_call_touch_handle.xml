<!-- Touch handle for the MultiWaveView widget on the incoming call screen -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="true">

    <item
            android:state_enabled="true"
            android:state_active="false"
            android:state_focused="false"
            android:drawable="@drawable/redphone_ic_in_call_touch_handle_normal" />

    <!-- "Pressed" state uses the same simple "ring" image as on the lockscreen -->
    <item
            android:state_enabled="true"
            android:state_active="true"
            android:state_focused="false"
            android:drawable="@drawable/redphone_ic_lockscreen_handle_pressed" />

</selector>