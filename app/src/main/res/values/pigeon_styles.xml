<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Mp02">Mp02</style>

    <style name="Mp02.Signal">Mp02.Signal</style>

    <style name="Mp02.Signal.CustomDialog" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:scrollbars">none</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="Mp02.Signal.ListTextView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:defaultFocusHighlightEnabled" tools:targetApi="o">false</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/mp02_common_text_button</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Mp02.Signal.TextInputLayout.Registration.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:padding">0dp</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="endIconTint">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/focused_text_color</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
    </style>

    <style name="Mp02.Signal.TextInputLayout.Registration" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:padding">0dp</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxStrokeColor">@color/focused_text_color</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="helperTextEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Mp02.Signal.Background">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Mp02.Signal.Text">Mp02.Signal.Text</style>

    <style name="Mp02.Signal.Text.WelcomeTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white_focus</item>
        <item name="singleLine">false</item>
        <item name="android:defaultFocusHighlightEnabled" tools:ignore="NewApi">false</item>
    </style>

    <style name="Mp02.Signal.Text.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:defaultFocusHighlightEnabled" tools:ignore="NewApi">false</item>
    </style>

    <style name="Mp02.Signal.Text.SubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Mp02.Signal.Text.CommonTextButton">
        <item name="android:textSize">24sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/mp02_common_text_button</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:defaultFocusHighlightEnabled" tools:ignore="NewApi">false</item>
    </style>

    <style name="Mp02.Signal.Text.CommonTextButton.NoFocus" parent="Mp02.Signal.Text.CommonTextButton">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Mp02.Signal.Text.BigCommonTextButton">
        <item name="android:textSize">36sp</item>
        <item name="android:includeFontPadding">false</item>
c        <item name="android:textAlignment">textStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:defaultFocusHighlightEnabled" tools:ignore="NewApi">false</item>
    </style>

    <style name="Mp02.Signal.Text.Body" parent="Signal.Text.Body">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Mp02.Signal.Text.Caption" parent="Signal.Text.Caption">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Mp02.Signal.Text.MaterialTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">24sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/mp02_common_text_button</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">0sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minWidth">0sp</item>
        <item name="android:minHeight">0sp</item>
        <item name="android:insetTop">0sp</item>
        <item name="android:insetBottom">0sp</item>
        <item name="android:defaultFocusHighlightEnabled" tools:ignore="NewApi">true</item>
    </style>


</resources>